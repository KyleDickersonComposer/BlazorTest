@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h1" Style="text-align:justify-all" Color="Color.Primary">COUNTER PAGE</MudText>
<MudDivider Class="my-2"></MudDivider>
<MudText Typo="Typo.h5" Color="Color.Secondary">Counter: @currentCount</MudText>


<MudButton Variant="Variant.Filled" OnClick="IncrementCount" Color="Color.Primary">Click Me!</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount += 5;
    }
}

