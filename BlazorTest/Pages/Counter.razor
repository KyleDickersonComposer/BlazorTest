@page "/counter"

<PageTitle>Counter</PageTitle>

<MudPaper>
    <MudText Class="d-inline-block" Typo="Typo.h5" Color="Color.Primary" Align="Align.Left">MUDBLAZOR TEST</MudText>

    <MudNavMenu Color="Color.Info">
        <MudNavLink style="width: 255px" Href="/counter" Icon="@Icons.Material.Filled.PlusOne">Counter</MudNavLink>
        <MudNavLink style="width: 255px" Href="/weather" Icon="@Icons.Material.Filled.Cloud">Weather</MudNavLink>
        <MudNavLink style="width: 255px" Icon="@Icons.Material.Filled.Link" OnClick="OnButtonClicked">Blazor Survey</MudNavLink>

        <MudPaper>
            <MudText Typo="Typo.h1" Align="Align.Left" Color="Color.Primary">COUNTER PAGE</MudText>
            <MudDivider Class="my-2"></MudDivider>
            <MudText Typo="Typo.h5" Align="Align.Left" Color="Color.Secondary">Counter: @currentCount</MudText>
        </MudPaper>
    </MudNavMenu>
</MudPaper>

@code {
    [Inject] private IDialogService DialogService { get; set; }
    [Inject] private NavigationManager NavigationManager { get; set; }


    private async void OnButtonClicked()
    {
        bool? result = await DialogService.ShowMessageBox(
            "Warning",
            @"You are leaving this page for a Blazor survey.",
            yesText: "Leave", cancelText: "Stay");

        if (result != null && result == true)
        {
            NavigationManager.NavigateTo("https://go.microsoft.com/fwlink/?linkid=2186158", true);
        }
    }
}





<MudButton Variant="Variant.Filled" OnClick="IncrementCount" Color="Color.Primary">Click Me!</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount += 5;
    }
}

